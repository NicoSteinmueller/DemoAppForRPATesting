<AuthorizeView>
    <Authorized>
        <MudLink Href="Identity/Account/Manage">Hallo, @context.User.Identity?.Name!</MudLink>
        <MudForm method="post" action="Identity/Account/Logout">
            <MudButton ButtonType="ButtonType.Submit">Log out</MudButton>
        </MudForm>
    </Authorized>
    <NotAuthorized>
        <MudLink Href="Identity/Account/Login">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>